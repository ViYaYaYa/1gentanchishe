<view class="m_play">
  <view class="m_core">
    <canvas class="m_core_canvas" canvas-id="canvas" style="width: 320px; height: 320px;"></canvas>
  </view>
  <view class="m_control">
    <button bindtap="doChangeDirection" data-direction="1">上</button>
    <button bindtap="doChangeDirection" data-direction="2">右</button>
    <button bindtap="doChangeDirection" data-direction="3">下</button>
    <button bindtap="doChangeDirection" data-direction="4">左</button>
  </view>
</view>
